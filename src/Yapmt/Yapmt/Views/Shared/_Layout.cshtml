<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Yapmt", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#" data-toggle="modal" data-target="#newProdModal">New Project</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>

    <!-- Modal New Project-->
    <div class="modal fade" id="newProdModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New Project</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>
                        <div class="form-group">
                            <label for="newProjectName">Name</label>
                            <input type="text" id="newProjectName" class="form-control" placeholder="Enter Project Name">
                        </div>
                        <small id="projAddInfo" class="form-text text-muted" style="color:red; visibility:hidden;">
                            Please fill in the name.
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="submitProject" class="btn btn-primary">Save changes</button>
                </div>
                <script>
                    $(function () {
                        $("#newProjectName").keypress(function (e) {
                            if (e.keyCode == 13) {
                                $('#submitProject').click();
                            }
                        });

                        $("#submitProject").click(function () {
                            var projName = $('#newProjectName').val();

                            if (projName === "" || projName === undefined) {
                                $('#projAddInfo').css("visibility", "visible");
                            }
                            else {
                                var data = {
                                    name: projName
                                };

                                $.post("/Project/Create", { project: data },
                                    function () { window.location.href = "/"; });
                            }
                        });
                    });
                </script>
            </div>
        </div>
    </div>


</body>
</html>
